    <title>Catita | Report</title>
</head>
<style>
    *{ margin: 0; padding: 0; }

    .container {display: flex; flex-direction: column; align-items: center; }

    .receipts { margin-bottom: 10px}

    img{ height: 50vh; }
</style>
<style type="text/css" media="print">
    #print { display: none }
    #back { display: none}
</style>
<body>
    <a href="/report" id="back" name="back">Back</a>
    <input type="button" id="print" name="print" value="print" onclick="window.print();">
    <div class="container">
        @each(item in receipts)
        <div class="receipts">
            <img id="receipt" src="{{item.img_url}}" alt="{{item.name}}" srcset="">
        </div>
        @endeach
    </div>

